                android:text="Prima"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/radioButton1" />
            <RadioButton
                android:text="Seconda"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/radioButton2" />
            <RadioButton
                android:text="Terza"
